@model List<WebApplication1.Models.Products>

	<h2>Ürün Listesi</h2>
	<a href="/Product/Create" class="btn btn-primary">Yeni Ürün Ekle</a>

	<table class="table" >
		<thead>
		<tr>
			<th>Ürün Adı</th>
			<th>Ürün Fiyatı</th>
		</tr>
		</thead>
		<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Price</td>
			</tr>
		}
		
		</tbody>
	</table>
