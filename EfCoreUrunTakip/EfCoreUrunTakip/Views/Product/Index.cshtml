 @model List<EfCoreUrunTakip.Models.Product>
<h2>Ürün Listesi</h2>
<a href="/Product/Create" class="btn btn-success">Yeni Ürün</a>
<table class="table">
	<thead>
		<tr>
			<th>Ad</th>
			<th>Fiyat</th>
			<th>İşlem</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Price ₺</td>
				<td>
					<a href="/Product/Delete/@item.Id" class="btn btn-danger">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>


