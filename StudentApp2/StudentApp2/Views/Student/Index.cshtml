@model List<StudentApp2.Models.Student>
<h2>Öğrenciler</h2>
<a href="Student/Create" class="btn btn-primary">Yeni Öğrenci Ekle</a>
<table class="table">
	<thead>
		<tr><th>Ad Soyad</th><th>Numara</th><th>Doğum Tarihi</th><th>İşlem</th></tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.FullName</td>
				<td>@item.StudentNumber</td>
				<td>@item.BirthDate.ToShortDateString()</td>
				<td>
					<a href="/Student/Edit/@item.Id" class="btn btn-warning">Düzenle</a>
					<a href="/Student/Delete/@item.Id" class="btn btn-danger">Sil</a>
				</td>
			</tr>
		}


	</tbody>
</table>
