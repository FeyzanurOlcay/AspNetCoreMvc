 @model List<ProductList.Models.Product>

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Ürün Listesi</title>
</head>
<body>
	<h2>Ürün Listesi</h2>
	<table border="1" cellpadding="5">
		<thead>
			<tr>
				<th>Id</th>
				<th>Ad</th>
				<th>Fiyat</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Price</td>
				</tr>
			}
		</tbody>
	</table>
</body>
</html>

